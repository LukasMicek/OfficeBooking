@model OfficeBooking.Models.Reservation

@{
    ViewData["Title"] = "Cancel Reservation";
}

<h2>Cancel Reservation</h2>

<div class="alert alert-warning mt-3">
    Are you sure you want to cancel this reservation?
</div>


<dl class="row mt-3">
    <dt class="col-sm-2">Room</dt>
    <dd class="col-sm-10">@Model.Room.Name</dd>

    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">From</dt>
    <dd class="col-sm-10">@Model.Start.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-2">To</dt>
    <dd class="col-sm-10">@Model.End.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-2">Attendees</dt>
    <dd class="col-sm-10">@Model.AttendeesCount</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-warning">Cancel reservation</button>
    <a class="btn btn-secondary" asp-action="My">Back</a>
</form>
