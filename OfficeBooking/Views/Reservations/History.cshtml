@model IEnumerable<OfficeBooking.Models.Reservation>

@{
    ViewData["Title"] = "Reservation History";
}

<partial name="_PageHeader" model='("Reservation History", "Cancelled reservations with reasons.")' />

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        No cancelled reservations.
    </div>
}
else
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Room</th>
                <th>Title</th>
                <th>From</th>
                <th>To</th>
                <th>Cancelled</th>
                <th>Reason</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Room.Name</td>
                    <td>@r.Title</td>
                    <td>@r.Start.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@r.End.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(r.CancelledAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                    <td>@(string.IsNullOrWhiteSpace(r.CancelReason) ? "-" : r.CancelReason)</td>
                </tr>
            }
        </tbody>
    </table>
}
