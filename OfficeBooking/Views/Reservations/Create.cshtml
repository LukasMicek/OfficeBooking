@model OfficeBooking.ViewModels.ReservationCreateViewModel

@{
    ViewData["Title"] = "Nowa rezerwacja";
}

<div class="container mt-4" style="max-width: 800px;">
    <h2>Nowa rezerwacja</h2>
    <hr />

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="RoomId" />

        <div class="alert alert-primary d-flex align-items-center">
            <strong>Wybrana sala:</strong> &nbsp; @Model.RoomName &nbsp; (Pojemność: @Model.RoomCapacity os.)
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Title" class="form-label">Tytuł spotkania</label>
                <input asp-for="Title" class="form-control" placeholder="np. Spotkanie projektowe" />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="AttendeesCount" class="form-label">Liczba uczestników</label>
                <input asp-for="AttendeesCount" class="form-control" type="number" min="1" max="@Model.RoomCapacity" />
                <span asp-validation-for="AttendeesCount" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label">Notatki (opcjonalne)</label>
            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
            <span asp-validation-for="Notes" class="text-danger small"></span>
        </div>

        <div class="card mb-4 border-light bg-light">
            <div class="card-header">Czas rezerwacji</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 border-end">
                        <h6 class="text-muted mb-3">Rozpoczęcie</h6>
                        <div class="mb-2">
                            <label asp-for="StartDate" class="form-label small">Dzień</label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>
                        <div class="mb-2">
                            <label asp-for="StartTime" class="form-label small">Godzina</label>
                            <input asp-for="StartTime" type="time" class="form-control" />
                            <span asp-validation-for="StartTime" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">Zakończenie</h6>
                        <div class="mb-2">
                            <label asp-for="EndDate" class="form-label small">Dzień</label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                        <div class="mb-2">
                            <label asp-for="EndTime" class="form-label small">Godzina</label>
                            <input asp-for="EndTime" type="time" class="form-control" />
                            <span asp-validation-for="EndTime" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success px-4">Zapisz rezerwację</button>
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Anuluj</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


