@model IEnumerable<OfficeBooking.ViewModels.MyReservationViewModel>

@{
    ViewData["Title"] = "My Reservations";
}

<partial name="_PageHeader" model='("My Reservations", "View your active reservations and edit or cancel them before they start.")' />

<div class="d-flex justify-content-between align-items-center mt-3 mb-3">
    <a asp-controller="Reservations" asp-action="History" class="btn btn-outline-secondary btn-sm">
        View history (completed/cancelled)
    </a>
</div>

@if (!Model.Any())
{
    <div class="text-center p-5 bg-light rounded border">
        <h4 class="text-muted">You don't have any upcoming reservations yet.</h4>
        <p>Planning a meeting?</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">Find an available room</a>
    </div>
}
else
{
    <table class="table table-hover align-middle mt-3">
        <thead class="table-light">
            <tr>
                <th>Room</th>
                <th>Title</th>
                <th class="text-nowrap">From</th>
                <th class="text-nowrap">To</th>
                <th>Attendees</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td class="fw-bold">@r.RoomName</td>
                    <td>@r.Title</td>
                    <td class="text-nowrap">@r.Start.ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-nowrap">@r.End.ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-center">@r.AttendeesCount</td>
                    <td>
                        @if (r.IsUpcoming)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">In progress / past</span>
                        }
                    </td>
                    <td class="text-end">
                        @if (r.IsUpcoming)
                        {
                            <a class="btn btn-sm btn-outline-primary me-1"
                               asp-controller="Reservations"
                               asp-action="Edit"
                               asp-route-id="@r.Id">
                                Edit
                            </a>

                            <a class="btn btn-sm btn-danger"
                               asp-controller="Reservations"
                               asp-action="Delete"
                               asp-route-id="@r.Id"
                               onclick="return confirm('Are you sure you want to cancel this reservation?');">
                                Cancel
                            </a>
                        }
                        else
                        {
                            <span class="text-muted small">No actions</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
