@model IEnumerable<OfficeBooking.ViewModels.MyReservationViewModel>

@{
    ViewData["Title"] = "Moje rezerwacje";
}

<partial name="_PageHeader" model='("Moje rezerwacje", "Tutaj widzisz aktywne rezerwacje i możesz je edytować lub anulować przed rozpoczęciem.")' />

<div class="d-flex justify-content-between align-items-center mt-3 mb-3">
    <a asp-controller="Reservations" asp-action="History" class="btn btn-outline-secondary btn-sm">
        Zobacz historię (zakończone/anulowane)
    </a>
</div>

@if (!Model.Any())
{
    <div class="text-center p-5 bg-light rounded border">
        <h4 class="text-muted">Nie masz jeszcze żadnych nadchodzących rezerwacji.</h4>
        <p>Planujesz spotkanie?</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">Znajdź wolną salę</a>
    </div>
}
else
{
    <table class="table table-hover align-middle mt-3">
        <thead class="table-light">
            <tr>
                <th>Sala</th>
                <th>Tytuł</th>
                <th class="text-nowrap">Od</th>
                <th class="text-nowrap">Do</th>
                <th>Uczestnicy</th>
                <th>Status</th>
                <th class="text-end">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td class="fw-bold">@r.RoomName</td>
                    <td>@r.Title</td>
                    <td class="text-nowrap">@r.Start.ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-nowrap">@r.End.ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-center">@r.AttendeesCount</td>
                    <td>
                        @if (r.IsUpcoming)
                        {
                            <span class="badge bg-success">Aktywna</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">W trakcie / minęła</span>
                        }
                    </td>
                    <td class="text-end">
                        @if (r.IsUpcoming)
                        {
                            <a class="btn btn-sm btn-outline-primary me-1"
                               asp-controller="Reservations"
                               asp-action="Edit"
                               asp-route-id="@r.Id">
                                Edytuj
                            </a>

                            <a class="btn btn-sm btn-danger"
                               asp-controller="Reservations"
                               asp-action="Delete"
                               asp-route-id="@r.Id"
                               onclick="return confirm('Czy na pewno chcesz anulować tę rezerwację?');">
                                Anuluj
                            </a>
                        }
                        else
                        {
                            <span class="text-muted small">Brak akcji</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
