@model OfficeBooking.ViewModels.RoomSearchViewModel

@{
    ViewData["Title"] = "Room Search";
}

<div class="row">
    <div class="col-lg-8">

<partial name="_PageHeader" model='("Room Search", "Find an available room by date, capacity, and equipment.")' />

<form asp-action="Index" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-3 mb-3">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="StartTime" class="form-label"></label>
            <input asp-for="StartTime" type="time" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="EndTime" class="form-label"></label>
            <input asp-for="EndTime" type="time" class="form-control" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-3">
            <label asp-for="RequiredCapacity" class="form-label"></label>
            <input asp-for="RequiredCapacity" class="form-control" />
            <span asp-validation-for="RequiredCapacity" class="text-danger"></span>
        </div>

        <div class="col-md-9 mb-3">
            <label class="form-label">Required equipment</label>

            @if (Model.AllEquipments.Count == 0)
            {
                <div class="text-muted">No equipment in the database. Add some as admin.</div>
            }
            else
            {
                <div class="row">
                    @foreach (var eq in Model.AllEquipments)
                    {
                        var checkedAttr = Model.EquipmentIds.Contains(eq.Id) ? "checked" : "";

                        <div class="col-md-4">
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="EquipmentIds"
                                       value="@eq.Id"
                                       @checkedAttr />
                                <label class="form-check-label">@eq.Name</label>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
</form>

    </div>

    <div class="col-lg-4">
        <div class="app-card p-3">
            <h5>Rules</h5>
            <ul class="mb-0">
                <li>Business hours: 08:00–20:00</li>
                <li>Max reservation: 8 hours</li>
                <li>No past dates allowed</li>
                <li>Time conflicts are blocked</li>
            </ul>
        </div>
    </div>
</div>

@if (!(User.Identity?.IsAuthenticated ?? false))
{
    <div class="alert alert-info mt-4">
        To book a room, please log in or create an account.
    </div>
}
@if (Model.Results is not null)
{
    if (Model.Results.Count > 0)
    {
        <div class="app-card p-3 mt-4">
            <h3 class="mb-3">Available Rooms</h3>

            <div class="mb-3">
                <input type="text"
                       id="resultsFilter"
                       class="form-control"
                       placeholder="Filter results..." />
            </div>

            <table class="table table-striped mt-2" id="resultsTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Capacity</th>
                        <th>Equipment</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.Results)
                    {
                        var equipmentNames = room.RoomEquipments
                        .Select(re => re.Equipment.Name)
                        .OrderBy(n => n)
                        .ToList();

                        <tr>
                            <td>@room.Name</td>
                            <td>@room.Capacity</td>
                            <td>@(equipmentNames.Count == 0 ? "None" : string.Join(", ", equipmentNames))</td>
                            <td>
                                @if (User.Identity?.IsAuthenticated ?? false)
                                {
                                    <a class="btn btn-sm btn-success"
                                       asp-controller="Reservations"
                                       asp-action="Create"
                                       asp-route-roomId="@room.Id"
                                       asp-route-startDate="@Model.StartDate.ToString("yyyy-MM-dd")"
                                       asp-route-startTime="@Model.StartTime.ToString(@"hh\:mm")"
                                       asp-route-endDate="@Model.EndDate.ToString("yyyy-MM-dd")"
                                       asp-route-endTime="@Model.EndTime.ToString(@"hh\:mm")">
                                        Book
                                    </a>
                                }
                                else
                                {
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-area="Identity"
                                       asp-page="/Account/Login">
                                        Log in
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="app-card p-3 mt-4">
            <div class="alert alert-warning mb-0">
                No rooms available for the specified criteria.
            </div>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const filterInput = document.getElementById('resultsFilter');
            const table = document.getElementById('resultsTable');
            if (!filterInput || !table) return;

            filterInput.addEventListener('input', function () {
                const query = this.value.toLowerCase();
                const rows = table.querySelectorAll('tbody tr');

                rows.forEach(function (row) {
                    const name = row.cells[0]?.textContent.toLowerCase() || '';
                    const equipment = row.cells[2]?.textContent.toLowerCase() || '';
                    const matches = name.includes(query) || equipment.includes(query);
                    row.style.display = matches ? '' : 'none';
                });
            });
        })();
    </script>
}
