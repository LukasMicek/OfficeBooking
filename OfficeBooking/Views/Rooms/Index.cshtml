@model IEnumerable<OfficeBooking.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<partial name="_PageHeader" model='("Rooms", "Manage conference rooms and their assigned equipment.")' />

<p class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add new room
    </a>
</p>

<table class="table table-hover align-middle shadow-sm">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Capacity)</th>
            <th>Equipment</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity) people
                </td>
                <td>
                    @{
                        var equipmentNames = item.RoomEquipments
                        .Select(re => re.Equipment.Name)
                        .OrderBy(n => n)
                        .ToList();
                    }

                    @if (equipmentNames.Count == 0)
                    {
                        <span class="text-muted small fst-italic">No equipment</span>
                    }
                    else
                    {
                        foreach (var eq in equipmentNames)
                        {
                            <span class="badge bg-info text-dark me-1">@eq</span>
                        }
                    }
                </td>
                <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
