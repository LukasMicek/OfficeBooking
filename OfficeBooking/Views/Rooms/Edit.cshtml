@model OfficeBooking.ViewModels.RoomFormViewModel

@{
    ViewData["Title"] = "Edit Room";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Capacity" class="form-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label class="form-label">Equipment</label>

                @if (Model.AllEquipments.Count == 0)
                {
                    <div class="text-muted">No equipment in the database. Add some in the "Equipment" section.</div>
                }
                else
                {
                    foreach (var eq in Model.AllEquipments)
                    {
                        var isChecked = Model.SelectedEquipmentIds.Contains(eq.Id);

                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="SelectedEquipmentIds"
                                   value="@eq.Id"
                                   @(isChecked ? "checked" : "") />
                            <label class="form-check-label">@eq.Name</label>
                        </div>
                    }
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
