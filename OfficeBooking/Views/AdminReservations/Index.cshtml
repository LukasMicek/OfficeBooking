@model IEnumerable<OfficeBooking.ViewModels.AdminReservationRowViewModel>

@{
    ViewData["Title"] = "Wszystkie rezerwacje";
}

<partial name="_PageHeader" model='("Rezerwacje (Admin)", "Podgląd wszystkich rezerwacji i możliwość anulowania z powodem.")' />

<div class="card bg-light mb-4 mt-3">
    <div class="card-body py-2">
        <form method="get" class="row align-items-center g-3">
            <div class="col-auto">
                <span class="fw-bold text-muted">Filtry:</span>
            </div>
            <div class="col-auto">
                <div class="form-check pt-1">
                    <input class="form-check-input" type="checkbox" name="activeOnly" value="true" id="activeOnly"
                           @(Context.Request.Query["activeOnly"] == "true" ? "checked" : "") />
                    <label class="form-check-label" for="activeOnly">
                        Pokaż tylko aktywne rezerwacje
                    </label>
                </div>
            </div>
            <div class="col-auto">
                <button class="btn btn-sm btn-primary" type="submit">Zastosuj</button>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-2">Wyczyść</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Brak rezerwacji spełniających kryteria.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Sala</th>
                    <th>Tytuł</th>
                    <th>Kiedy (Od - Do)</th>
                    <th>Kto</th>
                    <th>Status</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.RoomName</td>
                        <td>
                            <span class="d-block text-truncate" style="max-width: 150px;" title="@r.Title">
                                @r.Title
                            </span>
                        </td>
                        <td class="small">
                            <div class="text-nowrap">@r.Start.ToString("yyyy-MM-dd HH:mm")</div>
                            <div class="text-nowrap text-muted">@r.End.ToString("yyyy-MM-dd HH:mm")</div>
                        </td>
                        <td>
                            <small class="d-block">@r.UserEmail</small>
                            <small class="text-muted">(@r.AttendeesCount os.)</small>
                        </td>
                        <td>
                            @if (r.IsCancelled)
                            {
                                <span class="badge bg-secondary">Anulowana</span>
                            }
                            else
                            {

                                <span class="badge bg-success">Aktywna</span>
                            }
                        </td>
                        <td>
                            @if (!r.IsCancelled)
                            {
                                <a class="btn btn-sm btn-warning"
                                   asp-controller="AdminReservations"
                                   asp-action="Cancel"
                                   asp-route-id="@r.Id">
                                    Anuluj
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

