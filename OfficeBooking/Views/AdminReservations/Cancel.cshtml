@model OfficeBooking.ViewModels.AdminCancelReservationViewModel

@{
    ViewData["Title"] = "Cancel Reservation";
}

<h2>Cancel Reservation</h2>

<div class="alert alert-warning mt-3">
    Enter the cancellation reason. The reservation will be marked as cancelled and will no longer block the room.
</div>

<dl class="row mt-3">
    <dt class="col-sm-2">Room</dt>
    <dd class="col-sm-10">@Model.RoomName</dd>

    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">From</dt>
    <dd class="col-sm-10">@Model.Start.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-2">To</dt>
    <dd class="col-sm-10">@Model.End.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.UserEmail</dd>
</dl>

<form asp-action="Cancel" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="CancelReason" class="form-label"></label>
        <textarea asp-for="CancelReason" class="form-control"></textarea>
        <span asp-validation-for="CancelReason" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Confirm cancellation</button>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
