@model OfficeBooking.ViewModels.RoomSearchViewModel

@{
    ViewData["Title"] = "Wyszukiwarka sal";
}

<div class="row">
    <div class="col-lg-8">

<h2>Wyszukaj dostępną salę</h2>

<div class="alert alert-secondary mt-3">
    Zasady: rezerwacje tylko w godzinach 08:00–20:00, maksymalnie 8 godzin, brak terminów w przeszłości.
</div>


@if (TempData["Success"] is string msg)
{
    <div class="alert alert-success mt-3">@msg</div>
}

<form asp-action="Index" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    <div class="row">
        <div class="col-md-3 mb-3">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="StartTime" class="form-label"></label>
            <input asp-for="StartTime" type="time" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="EndTime" class="form-label"></label>
            <input asp-for="EndTime" type="time" class="form-control" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-3">
            <label asp-for="RequiredCapacity" class="form-label"></label>
            <input asp-for="RequiredCapacity" class="form-control" />
            <span asp-validation-for="RequiredCapacity" class="text-danger"></span>
        </div>

        <div class="col-md-9 mb-3">
            <label class="form-label">Wymagane wyposażenie</label>

            @if (Model.AllEquipments.Count == 0)
            {
                <div class="text-muted">Brak wyposażenia w bazie. Dodaj je jako admin.</div>
            }
            else
            {
                <div class="row">
                    @foreach (var eq in Model.AllEquipments)
                    {
                        var checkedAttr = Model.EquipmentIds.Contains(eq.Id) ? "checked" : "";

                        <div class="col-md-4">
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="EquipmentIds"
                                       value="@eq.Id"
                                       @checkedAttr />
                                <label class="form-check-label">@eq.Name</label>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Szukaj</button>
</form>

    </div>

    <div class="col-lg-4">
        <div class="app-card p-3">
            <h5>Zasady</h5>
            <ul class="mb-0">
                <li>Godziny pracy: 08:00–20:00</li>
                <li>Maks. czas rezerwacji: 8 godzin</li>
                <li>Brak terminów w przeszłości</li>
                <li>Konflikty czasowe są blokowane</li>
            </ul>
        </div>

        <div class="app-card p-3 mt-3">
            <h5>Role</h5>
            <div><strong>User</strong>: wyszukiwanie i własne rezerwacje</div>
            <div><strong>Admin</strong>: sale, wyposażenie, anulowanie, raport</div>
        </div>
    </div>
</div>

@if (!(User.Identity?.IsAuthenticated ?? false))
{
    <div class="alert alert-info mt-4">
        Aby zarezerwować salę, zaloguj się lub załóż konto.
    </div>
}

@if (Model.Results != null && Model.Results.Count > 0)
{
    <div class="app-card p-3 mt-4">
        <h3 class="mb-3">Dostępne sale</h3>

    <table class="table table-striped mt-2">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Pojemność</th>
                <th>Wyposażenie</th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.Results)
            {
                var equipmentNames = room.RoomEquipments
                .Select(re => re.Equipment.Name)
                .OrderBy(n => n)
                .ToList();

                <tr>
                    <td>@room.Name</td>
                    <td>@room.Capacity</td>
                    <td>
                        @(equipmentNames.Count == 0 ? "Brak" : string.Join(", ", equipmentNames))
                    </td>
                    <td>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a class="btn btn-sm btn-success"
                               asp-controller="Reservations"
                               asp-action="Create"
                               asp-route-roomId="@room.Id"
                               asp-route-startDate="@Model.StartDate.ToString("yyyy-MM-dd")"
                               asp-route-startTime="@Model.StartTime.ToString(@"hh\:mm")"
                               asp-route-endDate="@Model.EndDate.ToString("yyyy-MM-dd")"
                               asp-route-endTime="@Model.EndTime.ToString(@"hh\:mm")">
                                Rezerwuj
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-outline-primary"
                               asp-area="Identity"
                               asp-page="/Account/Login">
                                Zaloguj się
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
}
else if (Model.Results != null)
{
<div class="app-card p-3 mt-4">
    <div class="alert alert-warning mb-0">Brak dostępnych sal dla podanych kryteriów.</div>
</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
