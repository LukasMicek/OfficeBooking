@model OfficeBooking.ViewModels.AdminCancelReservationViewModel

@{
    ViewData["Title"] = "Anuluj rezerwację";
}

<h2>Anuluj rezerwację</h2>

<div class="alert alert-warning mt-3">
    Wpisz powód anulowania. Rezerwacja zostanie oznaczona jako anulowana i nie będzie blokowała sali.
</div>

<dl class="row mt-3">
    <dt class="col-sm-2">Sala</dt>
    <dd class="col-sm-10">@Model.RoomName</dd>

    <dt class="col-sm-2">Tytuł</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Od</dt>
    <dd class="col-sm-10">@Model.Start.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-2">Do</dt>
    <dd class="col-sm-10">@Model.End.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-2">Użytkownik</dt>
    <dd class="col-sm-10">@Model.UserEmail</dd>
</dl>

<form asp-action="Cancel" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="CancelReason" class="form-label"></label>
        <textarea asp-for="CancelReason" class="form-control"></textarea>
        <span asp-validation-for="CancelReason" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Potwierdź anulowanie</button>
    <a class="btn btn-secondary" asp-action="Index">Wróć</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
