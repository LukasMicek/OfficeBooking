@model IEnumerable<OfficeBooking.ViewModels.AdminReservationRowViewModel>

@{
    ViewData["Title"] = "Wszystkie rezerwacje";
}

<h2>Wszystkie rezerwacje</h2>

<form method="get" class="mt-3">
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="activeOnly" value="true" id="activeOnly"
               @(Context.Request.Query["activeOnly"] == "true" ? "checked" : "") />
        <label class="form-check-label" for="activeOnly">
            Pokaż tylko aktywne
        </label>
    </div>
    <button class="btn btn-sm btn-primary mt-2" type="submit">Zastosuj</button>
</form>

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success mt-3">@ok</div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger mt-3">@err</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">Brak rezerwacji w systemie.</div>
}
else
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Sala</th>
                <th>Tytuł</th>
                <th>Od</th>
                <th>Do</th>
                <th>Uczestnicy</th>
                <th>Użytkownik</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.RoomName</td>
                    <td>@r.Title</td>
                    <td>@r.Start.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@r.End.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@r.AttendeesCount</td>
                    <td>@r.UserEmail</td>
                    <td>
                        @if (r.IsCancelled)
                        {
                            <span class="badge bg-secondary">Anulowana</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Aktywna</span>
                        }
                    </td>
                    <td>
                        @if (!r.IsCancelled)
                        {
                            <a class="btn btn-sm btn-warning"
                               asp-controller="AdminReservations"
                               asp-action="Cancel"
                               asp-route-id="@r.Id">
                                Anuluj
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

